{
  "name": "next-level",
  "version": "1.0.0",
  "description": "Do zero ao infinito, do nada à algum lugar, o próximo nível...",
  "main": "index.js",
  "engines": {
    "node": ">=20.12.2"
  },
  "scripts": {
    "dev": "npm run services:up && npm run wait-for-postgres && npm run migration:up && next dev",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "lint:eslint:fix": "next lint --fix",
    "test": "npm run services:up && npm run wait-for-postgres && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "test:watch": "npm run services:up && npm run wait-for-postgres && jest --watchAll --runInBand",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:down": "docker compose -f infra/compose.yaml down -v",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "migration:create": "node-pg-migrate -m infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "wait-for-postgres": "node infra/scripts/wait-for-postgres.js",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "async-retry": "1.3.3",
    "dotenv": "16.6.1",
    "dotenv-expand": "11.0.7",
    "next": "^14.2.30",
    "node-pg-migrate": "6.2.2",
    "pg": "8.16.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "commitizen": "4.3.1",
    "concurrently": "8.2.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.57.1",
    "eslint-config-next": "14.2.30",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.14.0",
    "husky": "9.1.7",
    "jest": "29.6.2",
    "prettier": "3.6.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
